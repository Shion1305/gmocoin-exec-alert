# GMO Coin API credentials (Private API)
GMOCOIN_API_KEY=your_api_key
GMOCOIN_API_SECRET=your_api_secret

# Optional overrides
# GMOCOIN_PRIVATE_API_BASE=https://api.coin.z.com/private
# GMOCOIN_PRIVATE_WS_BASE=wss://api.coin.z.com/ws/private/v1/

# PagerDuty Events API v2
PAGERDUTY_ROUTING_KEY=your_pagerduty_integration_key
# PAGERDUTY_EVENTS_API_URL=https://events.pagerduty.com/v2/enqueue
# PAGERDUTY_SOURCE=gmocoin-exec-alert
# PAGERDUTY_SEVERITY=critical
# PAGERDUTY_DRY_RUN=false

# Which private WS channels to subscribe/alert on
# For "alert only when actually executed", keep this as executionEvents.
# ALERT_CHANNELS=executionEvents

# Tuning
# HTTP_TIMEOUT_SEC=10
# WS_AUTH_EXTEND_INTERVAL_SEC=3000
# RECONNECT_BACKOFF_BASE_SEC=1
# RECONNECT_BACKOFF_MAX_SEC=30
# DEDUP_TTL_SEC=300
# DEDUP_MAX_KEYS=5000
# LOG_LEVEL=INFO

# Process Monitoring (for ML jobs)
# Enable monitoring of local processes (e.g., "uv run atc")
# PROCESS_MONITOR_ENABLED=false
# PROCESS_MONITOR_PATTERN=uv run atc
# PROCESS_MONITOR_CHECK_INTERVAL_SEC=5
# PROCESS_MONITOR_IDLE_THRESHOLD_SEC=60
